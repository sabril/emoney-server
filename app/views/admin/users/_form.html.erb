<%= simple_form_for [:admin, @user], :html => { :class => 'form-vertical' } do |f| %>
  <%= f.input :email %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :identity_number %>
  <%= f.input :address %>
  <%= f.input :phone %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_users_path, :class => 'btn btn-default' %>
<% end %>
