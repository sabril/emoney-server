<%- model_class = TransactionLog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @transaction_log.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:log_type) %>:</strong></dt>
  <dd><%= @transaction_log.log_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payer_id) %>:</strong></dt>
  <dd><%= @transaction_log.payer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:merchant_id) %>:</strong></dt>
  <dd><%= @transaction_log.merchant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:timestamp) %>:</strong></dt>
  <dd><%= @transaction_log.timestamp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cancel) %>:</strong></dt>
  <dd><%= @transaction_log.cancel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @transaction_log.status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              transaction_logs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_transaction_log_path(@transaction_log), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              transaction_log_path(@transaction_log),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
